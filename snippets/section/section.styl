@require "/style/global"

section-color-theme(name, textColor)
  &.color-theme-{name}
    .point-title
      color textColor

.media-section
  @extend $layout-column

  section-color-theme("blue", cornflowerblue)

  +media(tablet)
    flex-direction row
    height 100%
    min-height 800px

    &.cover
      min-height initial

  .section-media
    display: block
    width: 100%
    overflow: hidden
    height: 400px
    margin-bottom 2em

    +media(phone)
      height: 200px

    +media(tablet)
      width: 45%
      flex none
      margin-bottom: 0
      height: 100%

    .img
      display: block
      width: 100%
      height: 100%
      background-position center
      background-size cover
      +media(tablet)
        background-position bottom center

  .section-content
    @extend $layout-align-center
    flex 1
    padding 0 handheld-horizontal-padding

    +media(tablet)
      padding: 0 50px
      border-top: 1px solid #f0f0f0
      border-bottom: 1px solid #f0f0f0

    +media(desktop)
      padding: 0 75px

    +media(desktop-hd)
      padding: 0 100px

  .section-title
    display: block
    font-size 2em
    font-weight 700
    margin-bottom 1em

  .section-subtitle
    display: block
    font-size 1.4em
    font-weight 100

  .section-body
    display: block
    max-width 700px

    > p
      line-height: 1.5
      margin-bottom: 1.5em

